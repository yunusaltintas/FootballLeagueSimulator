@model TeamDTO
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <form asp-action="AddTeam" asp-controller="Home" method="post" class="p-4 w-25 mx-auto mt-5 shadow">
        <div class="form-group">
            <label asp-for="Name">Team Name:</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Team Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Attack">Attack:</label>
            <input asp-for="Attack" type="text" class="form-control" placeholder="Attack" />
            <span asp-validation-for="Attack" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Defense">Defense:</label>
            <input asp-for="Defense" type="text" class="form-control" placeholder="Defense" />
            <span asp-validation-for="Defense" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Chance">Chance:</label>
            <input asp-for="Chance" type="text" class="form-control" placeholder="Chance" />
            <span asp-validation-for="Chance" class="text-danger"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-info">Update Team</button>
        </div>
    </form>
</body>
</html>
